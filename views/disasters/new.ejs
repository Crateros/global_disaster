<h2>Add a Disaster! Nature Always Wins!</h2>

<form action="/disasters/new" method="post">
  <div class="form-group">
    <label for="country">Country</label>
    <input type="text" name="country" id="country" class="form-control" placeholder="Country of Origin">
  </div>
  <div class="form-group">
    <label for="disaster_type">Disaster</label>
    <input type="text" name="disaster_type" id="disaster_type" class="form-control" placeholder="Random Act of God">
  </div>
  <div class="form-group">
    <label for="casualties">Number of Human Casualties</label>
    <input type="text" name="casualties" id="casualties" class="form-control" placeholder="9999">
  </div>
  <div class="form-group">
    <label for="date">Date</label>
    <input type="date" name="date" id="date" class="form-control" placeholder="1999-12-31">
  </div>
  <div class="form-group">
    <label for="time">Time</label>
    <input type="time" name="time" id="time" class="form-control" placeholder="23:59">
  </div>
  <button type="submit" id="submitForm" class="grow">CREATE DESTRUCTION!</button>
</form>
